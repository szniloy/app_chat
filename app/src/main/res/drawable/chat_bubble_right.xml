<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background color of the chat bubble -->
    <solid android:color="@color/Green"/> <!-- Blue color for the bubble -->

    <!-- Round the corners of the bubble -->
    <corners android:radius="16dp"/>

    <!-- Add a small shadow around the bubble -->
    <stroke
        android:width="1dp"
        android:color="@color/Green"/> <!-- Darker blue border -->

    <!-- Padding inside the bubble -->
    <padding
        android:left="10dp"
        android:top="6dp"
        android:right="10dp"
        android:bottom="6dp"/>

    <!-- Optional: Add a triangle to represent the message tail -->
<!--    <size-->
<!--        android:width="wrap_content"-->
<!--        android:height="wrap_content"/>-->

    <!-- Optional: Add a shape drawable to create the tail -->
<!--    <corners android:radius="16dp"/>-->

</shape>